#!/bin/bash

while [ $# -gt 0 ]; do
  case "$1" in
    --user=*)
      USER="${1#*=}"
      ;;
    --apitoken=*)
      APITOKEN="${1#*=}"
      ;;
    --jenkins_url=*)
      JENKINS_URL="${1#*=}"
      ;;
    *)
  esac
  shift
done


if [[ -z ${WORKSPACE+x} ]]; then
    WORKSPACE=$(pwd)
fi

[[ -f "$WORKSPACE/test/config/config.env" ]] && source "$WORKSPACE/test/config/config.env" || exit 1

[[ -z "${USER_JENKINS}" ]] && echo 'Ops! USER_JENKINS is not set' && exit 1
[[ -z "${APITOKEN_JENKINS}" ]] && echo 'Ops! APITOKEN_JENKINS is not set' && exit 1
[[ -z "${JENKINS_URL}" ]] && echo 'Ops! JENKINS_URL is not set' && exit 1

for i in {1..10}; do
  curl -X POST "http://$USER_JENKINS:$APITOKEN_JENKINS@${JENKINS_URL}/job/2-scripting/job/generate-bulk-data-${i}/build?token=$APITOKEN_JENKINS"
  printf "${GREEN}job generate-bulk-data launched ${NC}\n"
done